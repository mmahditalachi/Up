<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:background="@drawable/red_border"
        android:layout_height="wrap_content">
   <TextView
       android:id="@+id/cart_number_label_mojodi"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textStyle="bold"
       android:textColor="@color/winered"
       android:textSize="25dp"
       android:text="Card Number:"
       android:paddingLeft="15dp"
       android:paddingTop="5dp"
       android:paddingBottom="5dp"
       android:background="@drawable/red_border"
       android:layout_alignParentTop="true"
       android:layout_marginTop="20dp"
       />

        <EditText
            android:id="@+id/cart_number_txt_mojodi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_number_label_mojodi"
            android:backgroundTint="@color/winered"
            android:hint="Card number"
            android:inputType="number"
            android:textColor="@color/black" />
    <TextView
        android:id="@+id/password_label_mojodi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/winered"
        android:textStyle="bold"
        android:text="password:"
        android:background="@drawable/red_border"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@id/cart_number_txt_mojodi"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/password_txt_mojodi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/winered"
        android:textColor="@color/black"
        android:hint="password"
        android:layout_below="@id/password_label_mojodi"/>
    <Button
        android:id="@+id/count_btn_mojodi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="show"
        android:background="@drawable/border_shape_background"
        android:layout_below="@id/password_txt_mojodi"
        android:layout_marginTop="30dp"/>
    </RelativeLayout>
</RelativeLayout>