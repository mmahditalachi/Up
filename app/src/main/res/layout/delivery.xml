<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/photo_delivery"
        android:layout_width="1920px"
        android:layout_height="1100px"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rocket" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo_delivery"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/start_btn_delivery"
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_btn2"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:text="Lets go!!!!"
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout >